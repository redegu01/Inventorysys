<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="650.0" prefWidth="550.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.degu.inventory.CreateInventoryItemController">
	<padding>
		<Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
	</padding>

	<Label text="Create New Inventory Item" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" />

	<GridPane hgap="10.0" vgap="10.0" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS"
			  style="-fx-border-color: #CCCCCC; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-padding: 20px; -fx-background-color: #E0F2F7;">

		<columnConstraints>
			<ColumnConstraints percentWidth="30.0" halignment="RIGHT"/>
			<ColumnConstraints percentWidth="70.0"/>
		</columnConstraints>

		<Label text="Id" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
		<TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="Infinity" />

		<Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
		<TextField fx:id="txtName" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="Infinity" />

		<Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
		<TextField fx:id="txtDescription" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="Infinity" />

		<Label text="Product" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
		<StackPane GridPane.columnIndex="1" GridPane.rowIndex="3">
			<children>
				<ComboBox fx:id="cmbProduct" prefWidth="Infinity" />
				<TextField fx:id="txtProductName" editable="false" prefWidth="Infinity" />
			</children>
		</StackPane>

		<Label text="Category" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
		<StackPane GridPane.columnIndex="1" GridPane.rowIndex="4">
			<children>
				<ComboBox fx:id="cmbCategory" prefWidth="Infinity" />
				<TextField fx:id="txtCategoryName" editable="false" prefWidth="Infinity" />
			</children>
		</StackPane>

		<Label text="Status" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
		<StackPane GridPane.columnIndex="1" GridPane.rowIndex="5">
			<children>
				<ComboBox fx:id="cmbStatus" prefWidth="Infinity" />
				<TextField fx:id="txtStatusName" editable="false" prefWidth="Infinity" />
			</children>
		</StackPane>

		<Label text="Quantity Available" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
		<TextField fx:id="txtQuantityAvailable" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="Infinity" />

		<Label text="Warehouse" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
		<StackPane GridPane.columnIndex="1" GridPane.rowIndex="7">
			<children>
				<ComboBox fx:id="cmbInventory" prefWidth="Infinity" />
				<TextField fx:id="txtInventoryName" editable="false" prefWidth="Infinity" />
			</children>
		</StackPane>

		<Label text="Price" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
		<TextField fx:id="txtPrice" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="8" prefWidth="Infinity" />
	</GridPane>

	<HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="NEVER">
		<padding>
			<Insets top="15.0" />
		</padding>
		<children>
			<Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBack" text="&lt;&lt; Back" style="-fx-base: #A9A9A9;" /> <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#onSubmit" text="Submit" style="-fx-base: #3CB371;" /> <Button fx:id="btnClose" mnemonicParsing="false" onAction="#onClose" text="Close" style="-fx-base: #A9A9A9;" /> </children>
	</HBox>
</VBox>